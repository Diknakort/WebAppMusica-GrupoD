@model IEnumerable<WebApplication_MUSICA_grupoD.Models.Canciones>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<input type="text" id="search" class="form-control search-input" placeholder="Buscar en la tabla...">
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="ordenable">
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th class="ordenable">
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th class="ordenable">
                @Html.DisplayNameFor(model => model.Discos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tablaCuerpo">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discos.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
